<div class="card">
  <div class="card-header">
    <h2>Change your password</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-floating mb-3 form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"form-control" %>
        <%= f.label :password, "New password" %>
      </div>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>

      <div class="field form-floating mb-3 form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <%= f.label :password_confirmation, "Confirm new password",class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password",class:"btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
